<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"

   >
    <TextView
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="30dp"
        android:textColor="#0B0000"
        android:fontFamily="@font/ubuntu_mono_bold"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="200dp"

        android:layout_height="185dp"
        android:layout_below="@+id/profile"


        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"


        android:src="@drawable/formal_1" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Mohaimen"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/email"
        android:layout_below="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_medium"
        android:layout_marginBottom="10dp"
        android:text="sample@gmail.com"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="About : Programming"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about"
        android:fontFamily="@font/ubuntu_medium"
        android:layout_marginBottom="10dp"
        android:text="22"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/prof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/ubuntu_medium"
        android:layout_below="@+id/age"
        android:text="Student"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prof"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Bangladesh"
        android:layout_marginBottom="10dp"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/country"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Rating : 5"
        android:layout_marginBottom="10dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/cng_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rating"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/ubuntu"
        android:text="Change password"
        android:textColor="#E10B33"
        android:textSize="20dp" />

    <Button
        android:id="@+id/logout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        android:background="@color/black"
        android:text="Log out"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:backgroundTint="#0D0000" />

</RelativeLayout>